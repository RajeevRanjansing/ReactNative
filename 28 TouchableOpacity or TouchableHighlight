#Alternae of button is TouchableHighlight and TouchableOpacity. i.e instead of button, we can use TouchableHighlight and TouchableOpacity. 


import React from "react";
import {TouchableHighlight,Text,View,Button,StyleSheet} from "react-native";

const index=()=>{

  return(
    <View>
      <TouchableHighlight>
    <Text style={[styles.button, styles.primary]}>Button</Text>
    </TouchableHighlight>

    <TouchableHighlight>
    <Text style={styles.button}>Button</Text>
    </TouchableHighlight>

    <TouchableHighlight>
    <Text style={styles.button}>Button</Text>
    </TouchableHighlight>

    <TouchableHighlight>
    <Text style={styles.button}>Button</Text>
    </TouchableHighlight>

    </View>
  )
}

const styles=StyleSheet.create({
  button:{
    backgroundColor:"lightseagreen",
    margin:10,
    borderWidth:1,
    height:40,
    width:80,
    display:"flex",
    alignItems:"center",
   justifyContent:"center",
    textAlign:"center",
    color:"white",
    fontSize:20,
    borderRadius:10,
  },
  primary:{
    backgroundColor:"yellow",
    color:"black",
  }
})

export default index;

