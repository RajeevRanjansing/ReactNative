//Lecture no. 56
//API me jo delete button ko functional bnana h.

import React, { useEffect, useState } from "react";
import { Text, View, ScrollView, Button } from "react-native";

const App = () => {
  const [data, setData] = useState([]);

  const getAPI = async () => {
    const url = "http://192.168.98.78:3000/user";
    let result = await fetch(url);
    result = await result.json();
    setData(result);
  };

  const deleteUser = async (id) => {
    const url = "http://192.168.98.78:3000/user";
    let result = await fetch(`${url}/${id}`, {
      method: "DELETE",
    });
    result = await result.json();
    if (result) {
      alert("User deleted");
      getAPI();
    }
  };

  useEffect(() => {
    getAPI();
  }, []);


  return (
    <ScrollView style={{ marginTop: 50, backgroundColor: "coral" }}>
      <View
        style={{
          backgroundColor: "lightseagreen",
          flexDirection: "row",
          justifyContent: "space-around",
          borderColor: "black",
          borderWidth: 2,
          marginTop: 10,
        }}
      >
        <Text style={{ textAlign: "center", fontSize: 25, flex: 1 }}>Id</Text>
        <Text style={{ textAlign: "center", fontSize: 25, flex: 1 }}>Name</Text>
        <Text style={{ textAlign: "center", fontSize: 25, flex: 3 }}>
          Operation
        </Text>
      </View>
      {data.length
        ? data.map((item) => (
            <View
              key={item.id}
              style={{
                backgroundColor: "lightseagreen",
                flexDirection: "row",
                justifyContent: "space-around",
                borderColor: "black",
                borderWidth: 2,
                marginTop: 10,
              }}
            >
              <Text style={{ textAlign: "center", fontSize: 25 }}>
                {item.id}
              </Text>
              <Text style={{ textAlign: "center", fontSize: 25 }}>
                {item.Name}
              </Text>
              <Button title="Update" />
              <Button title="Delete" onPress={() => deleteUser(item.id)} />
            </View>
          ))

